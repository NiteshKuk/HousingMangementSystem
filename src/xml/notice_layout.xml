<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/notice_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:text="abcdedfff"
                android:transitionName="nametransition"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/notice_time"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/notice_name"
                android:text="abcdedff"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notice_name"
                android:layout_marginStart="10dp"
                android:text="123456789"
                android:layout_toRightOf="@id/thumbnail"
                android:id="@+id/notice_room"
                android:transitionName="statustransition"
                android:fontFamily="@font/nunito_extralight"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/notice_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notice_room"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:transitionName="emailtransition"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/songs_count" />

            <ImageView
                android:id="@+id/overflow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="270dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_drop_down" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>