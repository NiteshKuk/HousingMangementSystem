<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/messageimage"
        android:src="@drawable/ic_person_outline_black_24dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/messageimage"
        android:background="@drawable/receiver_message_layout"
        android:padding="10dp"
        android:fontFamily="@font/nunito_extralight"
        android:id="@+id/message_receiver"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_sender"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/message_receiver"
        android:background="@drawable/sender_messages_layout"
        android:fontFamily="@font/nunito_extralight"
        android:padding="10dp"/>




</RelativeLayout>